{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JSON-Plus-Markdown DocBook Schema",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Document title"
    },
    "sections": {
      "type": "array",
      "description": "Top-level sections",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "Section title"
          },
          "content": {
            "anyOf": [
              {
                "type": "array",
                "items": {
                  "oneOf": [
                    {
                      "type": "object",
                      "properties": {
                        "type": { "const": "paragraph" },
                        "text": {
                          "type": "string",
                          "description": "Markdown text content including emphasis, footnotes, citations"
                        }
                      },
                      "required": ["type", "text"],
                      "additionalProperties": true
                    },
                    {
                      "type": "object",
                      "properties": {
                        "type": { "const": "table" },
                        "caption": { "type": "string" },
                        "headers": {
                          "type": "array",
                          "items": { "type": "string" }
                        },
                        "rows": {
                          "type": "array",
                          "items": {
                            "type": "array",
                            "items": { "type": "string" }
                          }
                        }
                      },
                      "required": ["type", "headers", "rows"],
                      "additionalProperties": true
                    },
                    {
                      "type": "object",
                      "properties": {
                        "type": { "const": "image" },
                        "caption": { "type": "string" },
                        "src": { "type": "string", "format": "uri" },
                        "alt": { "type": "string" }
                      },
                      "required": ["type", "src"],
                      "additionalProperties": true
                    },
                    {
                      "type": "object",
                      "properties": {
                        "type": { "const": "deflist" },
                        "items": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "term": { "type": "string" },
                              "definition": { "type": "string" }
                            },
                            "required": ["term", "definition"],
                            "additionalProperties": true
                          }
                        }
                      },
                      "required": ["type", "items"],
                      "additionalProperties": true
                    }
                  ]
                }
              },
              {
                "type": "object"
              }
            ]
          }
        },
        "additionalProperties": true
      }
    },
    "footnotes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "content": { "type": "string", "description": "Markdown content of the footnote" }
        },
        "required": ["id", "content"],
        "additionalProperties": true
      }
    },
    "bibliography": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "authors": {
            "type": "array",
            "items": { "type": "string" }
          },
          "year": { "type": "string" },
          "publisher": { "type": "string" }
        },
        "required": ["id", "title", "authors"],
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
